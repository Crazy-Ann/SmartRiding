<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yjt.app.ui.activity.MainActivity">

    <com.yjt.app.ui.widget.SearchTextView
        android:id="@+id/stvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/dp_15"
        android:backgroundTint="@color/purple_3F51B5"
        android:src="@mipmap/dir1"
        app:borderWidth="@dimen/dp_0"
        tools:targetApi="lollipop"/>

</FrameLayout>
