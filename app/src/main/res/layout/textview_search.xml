<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/dp_15"
    android:background="@drawable/frame_fillet_white">

    <ImageView
        android:id="@+id/ivLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@mipmap/dir1"/>

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/dp_0.5"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/ivLogin"
        android:layout_toRightOf="@+id/ivLogin"
        android:background="@color/gray_979797"/>

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@+id/vLine"
        android:layout_toRightOf="@+id/vLine"
        android:text="我我我我我我我我"
        android:textColor="@color/gray_979797"
        android:textSize="@dimen/sp_12"/>

    <ImageView
        android:id="@+id/ivVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@mipmap/dir1"/>

</RelativeLayout>
