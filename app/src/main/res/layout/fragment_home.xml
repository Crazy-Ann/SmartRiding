<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    tools:context="com.yjt.app.ui.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ivExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:contentDescription="@null"
            android:src="@mipmap/dir1"/>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_55"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_55"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/ivExchange"
            android:layout_toLeftOf="@+id/rlSearch"
            android:layout_toRightOf="@+id/ivExchange"
            android:layout_toStartOf="@+id/rlSearch"
            android:orientation="vertical">

            <com.yjt.app.ui.widget.SearchTextView
                android:id="@+id/stvStartPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.yjt.app.ui.widget.SearchTextView
                android:id="@+id/stvPassPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.yjt.app.ui.widget.SearchTextView
                android:id="@+id/stvEndPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5">

            <ImageView
                android:id="@+id/ivAddPassPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/ivVoice"
                android:layout_toStartOf="@+id/ivVoice"
                android:contentDescription="@null"
                android:src="@mipmap/dir1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivDeletePassPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/ivVoice"
                android:layout_toStartOf="@+id/ivVoice"
                android:contentDescription="@null"
                android:src="@mipmap/dir1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:contentDescription="@null"
                android:src="@mipmap/dir1"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/gray_979797"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray_979797"/>

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|bottom"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/selector_button1"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/search"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>
</RelativeLayout>
