<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/colorAccent"
    tools:context="com.yjt.app.MainActivity">

    <com.yjt.app.ui.widget.CircleImageView
        android:id="@+id/civHead"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_30"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher"
        app:border_color="@android:color/darker_gray"
        app:border_width="@dimen/dp_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/civHead"
        android:layout_toRightOf="@+id/civHead"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="Tye"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:id="@+id/tvTelphoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13810914516"
            android:textSize="@dimen/sp_10"/>
    </LinearLayout>

</RelativeLayout>
